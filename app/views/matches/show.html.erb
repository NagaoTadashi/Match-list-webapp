<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>試合詳細画面</title>
</head>

<body>
  <h1>試合情報</h1>
  
  <a href="/matches" class="btn btn--orange btn--radius">戻る</a>
  
  <h2 class="heading03">2022九州大学サッカー2部リーグ<%= @match.Sec %></h2>
  
  <h4 class="date"><%= @match.Date %></h4>
  <h4 class="venue"><%= @match.Venue %></h4>
  
  <div class="container">
    <div class="box">熊本大学</div>
    <div class="box"><%= @match.Score %></div>
    <div class="box"><%= @match.Oppnent %></div>
  </div>
  
  <div class="flex_test-box">
    <div class="flex_test-item">
      <table class="table table-striped">
        <thead>
          <th scope="col">STARTING MEMBER</th>
        </thead>
        <tbody>
          <tr><td><%= @match.Starting1 %></td></tr>
          <tr><td><%= @match.Starting2 %></td></tr>
          <tr><td><%= @match.Starting3 %></td></tr>
          <tr><td><%= @match.Starting4 %></td></tr>
          <tr><td><%= @match.Starting5 %></td></tr>
          <tr><td><%= @match.Starting6 %></td></tr>
          <tr><td><%= @match.Starting7 %></td></tr>
          <tr><td><%= @match.Starting8 %></td></tr>
          <tr><td><%= @match.Starting9 %></td></tr>
          <tr><td><%= @match.Starting10 %></td></tr>
          <tr><td><%= @match.Starting11 %></td></tr>
        </tbody>
      </table>

      <table class="table table-striped">
        <thead>
          <th scope="col">SUBSTITUTE MEMBER</th>
        </thead>
        <tbody>
          <tr><td><%= @match.Substitute1 %></td></tr>
          <tr><td><%= @match.Substitute2 %></td></tr>
          <tr><td><%= @match.Substitute3 %></td></tr>
          <tr><td><%= @match.Substitute4 %></td></tr>
          <tr><td><%= @match.Substitute5 %></td></tr>
          <tr><td><%= @match.Substitute6 %></td></tr>
          <tr><td><%= @match.Substitute7 %></td></tr>
          <tr><td><%= @match.Substitute8 %></td></tr>
          <tr><td><%= @match.Substitute9 %></td></tr>
        </tbody>
      </table>
    </div>
    
    <div class="flex_test-item">
      <p>相手のフォーメーション</p>
      <input type="text">
      <p>確認事項</p>
      <textarea name="example1" cols="30" rows="10"></textarea>
      <p>失点の仕方</p>
      <textarea name="example1" cols="30" rows="10"></textarea>
    </div>
  </div>
  
</body>
