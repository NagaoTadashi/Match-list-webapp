<h1>編集</h1>
<%= form_with model: @match do |form| %>
  <p>
    <%= form.label :節 %><br>
    <%= form.text_field :Sec %><br>
    <%= form.label :日時%><br>
    <%= form.text_field :Date %><br>
    <%= form.label :会場 %><br>
    <%= form.text_field :Venue %><br>
    <%= form.label :対戦チーム %><br>
    <%= form.text_field :Oppnent %><br>
    <%= form.label :試合結果 %><br>
    <%= form.text_field :Score %><br>
    <%= form.label :スタメン %><br>
    <% for i in 1..11 %>
      <%= form.select :Starting, @members, {include_blank: '選択ボックス'} %><br>
    <% end %>
    <%= form.label :サブ %><br>
    <% for i in 1..9 %>
      <%= form.select :Substitute, @members, {include_blank: '選択ボックス'} %><br>
    <% end %>
    <% if @match.errors.any? %>
        <% @match.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    <% end %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>